@model Budget.Models.HomeModel

<h1>The App</h1>

<p>Its time to get you started and create your budget</p>


    <h2>Personal Details</h2>

   
@using (Html.BeginForm("Index","Home", FormMethod.Post))
{

    @Html.ValidationSummary(true)
    
    
    <h2>Income</h2>
     
    for (var i = 0; i < Model.IncomeItems.Count();i++ )
    {

       <div>    
       @Html.TextBoxFor(x => x.IncomeItems[i].Name, new { @readonly = true })
        £
       @Html.TextBoxFor(x => x.IncomeItems[i].DefaultValue)
       </div> 
       
    };
 
    <h2>Expenditure</h2>
    
     
    for (var i = 0; i < Model.ExpenseItems.Count();i++ )
    {
        
       <div>    
       @Html.TextBoxFor(x => x.ExpenseItems[i].Name, new { @readonly = true })
        £
       @Html.TextBoxFor(x => x.ExpenseItems[i].DefaultValue)
       </div> 
       
    };
        
   <input type="submit" value="Proceed" />
    
    
    
}


